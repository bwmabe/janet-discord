{
    "extends": "@tsconfig/node17/tsconfig.json",
    "compilerOptions": {
      "module": "CommonJS",
      "target": "ES2017",
      "esModuleInterop": true,
      "noImplicitAny": true,
      "preserveConstEnums": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
